    <p style='width: 100%; text-align: center; margin: 0;'><span><%= e %></span></p>
    <% if @grp.info[:owner] == @user.id %>
    <textarea id='group_desc' placeholder='about' name='group[<%= e %>][info]' style='width: 70%;'><%= @grp.info[:about] %></textarea>
    <% else %>
    <p><%= @grp.info[:about] %></p>
    <% end %>
  </div>
  <% end %>
  <% end %>
</div>
